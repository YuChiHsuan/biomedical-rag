# .env.example
# ----------------------------------------------------
# This is an environment variable template. Please copy this file as a .env file and fill in your actual key.
# ----------------------------------------------------

# ==================== OpenAI Configuration ====================
# REQUIRED: The API key for accessing GPT models (answer generation, keyword extraction, STT)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY_HERE"

# ==================== Database Configuration ====================
# REQUIRED: MySQL connection details for RAG article storage and query cache
DB_HOST="localhost"
DB_PORT=3306
DB_USER="root"
DB_PASSWORD="YOUR_DB_PASSWORD_HERE"
DB_NAME="biomed_rag_db"

# ==================== RAG System Configuration ====================
# Optional: The security gate threshold (0.0 to 1.0). Higher = stricter filter.
CLASSIFIER_THRESHOLD=0.75

# ==================== LINE Integration (Optional) ====================
# ONLY required if you plan to run the LINE webhook adapter in integrations/line_webhook.py
LINE_CHANNEL_SECRET="YOUR_LINE_CHANNEL_SECRET_HERE"
LINE_CHANNEL_ACCESS_TOKEN="YOUR_LINE_CHANNEL_ACCESS_TOKEN_HERE"
# Optional: Maximum duration in seconds for audio messages (for LINE STT)
AUDIO_MAX_SECONDS=15